<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/Dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="backgroud1">
        <item name="android:background">@color/white_100</item>
    </style>

    <style name="backgroud2">
        <item name="android:background">@color/white_200</item>
    </style>

    <style name="editText">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="opButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <style name="imagebutton">
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="textName">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

</resources>